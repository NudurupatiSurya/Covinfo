<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".First_Screen"
    android:background="#fff"
    >
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/top"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"
            android:layout_marginTop="3dp"
            >
            <TextView
                android:layout_width="167dp"
                android:layout_height="51dp"
                android:textAllCaps="false"
                android:id="@+id/Your_Country"
                android:text="Your Country"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/oval_shape">
            </TextView>
            <TextView
                android:layout_width="167dp"
                android:layout_height="51dp"
                android:layout_marginLeft="3dp"
                android:textAllCaps="false"
                android:background="@drawable/oval_shape"
                android:id="@+id/World"
                android:text="World"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_toRightOf="@+id/Your_Country"></TextView>
        </RelativeLayout>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressbar"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_column="0"
            android:visibility="visible"></ProgressBar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:background="#fff"
            android:layout_gravity="center"
            >
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detailsgl">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:text="Total Cases"
                    android:textSize="25dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:textColor="#2C3335"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    ></TextView>

                <TextView
                    android:id="@+id/totalcases"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:gravity="center_horizontal"
                    android:text="4819277"
                    android:textColor="#E8290B"
                    android:textSize="25dp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:text="Total Deaths"
                    android:gravity="center_horizontal"
                    android:textSize="25dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:textColor="#2C3335"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:text="316,961"
                    android:gravity="center_horizontal"
                    android:textSize="25dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:textColor="#8395A7"
                    android:textStyle="bold"
                    android:id="@+id/totaldeaths"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:text="Total Recovered"
                    android:gravity="center_horizontal"
                    android:textSize="25dp"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:textColor="#2C3335"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:text="1,864,269"
                    android:gravity="center_horizontal"
                    android:textSize="25dp"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:textColor="#45CE30"
                    android:textStyle="bold"
                    android:id="@+id/totalrecovered"></TextView>
            </GridLayout>

        </ScrollView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:text="Data Visualization"
            android:id="@+id/dataviz"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/rounded_corners"
            android:layout_marginBottom="4dp"></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:text="Track Other Countries"
            android:id="@+id/trackothers"
            android:background="@drawable/rounded_corners"
            android:textColor="#fff"
            android:layout_marginBottom="4dp"></Button>
    </GridLayout>
</GridLayout>